<!DOCTYPE html>
<html>
<head>
  <title>OurDiary <%= @page_title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <!-- <link rel='stylesheet' href='fullcalendar/fullcalendar.css' />
    <script src='lib/jquery.min.js'></script>
    <script src='lib/moment.min.js'></script>
    <script src='fullcalendar/fullcalendar.js'></script> -->
  <script src="http://maps.googleapis.com/maps/api/js"></script>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <%= yield :google_maps %>
</head>

<body>
<br>
    <div class="container">
      <ul class="nav nav-tabs">
        <% if user_signed_in? %>
          <li>
            <%= link_to homebase_index_path do %>
              <i class="glyphicon glyphicon-home"> HomeBase</i>
            <% end %>
          </li>
          <!-- Signed in as: <strong><%= current_user.email %></strong> -->
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="glyphicon glyphicon-user"> EditProfile</i>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="glyphicon glyphicon-hourglass"> SignOut</i>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %></li>
        <% end %>

      </ul>
    </div>
    <% if @show_map %>
      <div id="googleMap" style="width:auto;height:300px;"></div>
    <% end %>

  <div class="container">
    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  </div>

<br>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
