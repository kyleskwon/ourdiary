<% @page_title = " | OurPlans" %>

  <div class="container">
    <div class="row">
      <div class="col-md-4" align="right">
        <%= link_to memories_path, class: 'btn btn-info' do %>
          <i class="glyphicon glyphicon-book"> OurMemories</i>
        <% end %>
      </div>
      <div class="col-md-4" align="center">
        <%= link_to plans_path, class: 'btn btn-primary' do %>
          <i class="glyphicon glyphicon-list-alt"> OurPlans</i>
        <% end %>
      </div>
      <div class="col-md-4" align="left">
        <%= link_to items_path, class: 'btn btn-warning' do %>
          <i class="glyphicon glyphicon-globe"> BucketList</i>
        <% end %>
      </div>
    </div>

  <h1 align="center">OurPlans</h1>
    <div class="col-md-8 col-md-offset-2">
      <p>You have <%= current_user.total_plans_count %> plans, bet you can't wait!</p>
        <%= link_to 'Add a Plan', new_plan_path, class: 'btn btn-success' %>

      <form role="form">
        <div class="form-group", align="right">
          <%= form_tag(memories_path, :method => "get", id: "search-form") do %>
            <div class="input-append">
              <%= text_field_tag :search, params[:search], class: "btn btn-default", placeholder: "Search Plans" %>
              <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
                   of using a Rails form helper -->
              <button class="btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          <% end %>
        </div>
      </form>
    </div>
<br>
<br>
<br>
<br>
<br>
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover">
        <!-- <thead>
          <tr>
            <th>Title</th>
            <th>Caption</th>
            <th colspan="3"></th>
          </tr>
        </thead> -->

        <tbody>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= link_to plan.date, plan %></td>
              <td><%= link_to plan.title, plan %></td>
              <td><%= link_to plan.caption.first(60), plan %></td>
              <!-- <td><%= link_to 'Edit', edit_plan_path(plan) %></td> -->
              <td><%= link_to 'Delete', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<br>
