<% @page_title = " | BucketList" %>

  <% content_for :google_maps do %>
    <script>
      $(document).ready(function() {
        console.log("loaded!");
        <% @item_markers.each do |marker| %>
          setMarker(<%= marker[:lat] %>, <%= marker[:long] %>, "<%= marker[:title] %>");
        <% end %>
      });
    </script>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <% if @previous %>
          <%= link_to "Previous", @previous, class: 'btn btn-default' %>
        <% end %>
      </div>
      <div class="col-md-2 col-md-offset-1" align="right">
        <% if @next %>
          <%= link_to "Next", @next, class:'btn btn-default', align: "right" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <p>
          <h3 align="center"><%= @item.title %>
            <p><small><%= @item.address %></small></p>
            </h3>
        </p>

      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <p class="text-justify" word-wrap="break-word">
            <blockquote><h5><%= @item.caption %></h5></blockquote>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-5">
            <%= render partial: "labels/list", locals: { labels: @item.labels } %>
        </div>
      </div>
      </div>
<br>
        <div class="col-md-7 avatar">
          <p><%= image_tag @item.avatar.url(:medium) %></p>
        </div>
      </div>
<br>
    <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-default' %>
    <%= link_to 'Delete', item_path, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Back', items_path, class: 'btn btn-default' %>
<br>
<br>
  </div>
