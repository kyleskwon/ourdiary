<% @page_title = " | BucketList" %>

<div class="row">
  <div class="col-md-4" align="center">
    <%= link_to "OurMemories", memories_path, class: 'btn btn-info' %>
  </div>
  <div class="col-md-4" align="center">
    <%= link_to "OurPlans", plans_path, class: 'btn btn-primary' %>
  </div>
  <div class="col-md-4" align="center">
    <%= link_to "BucketList", items_path, class: 'btn btn-warning' %>
  </div>
</div>

<br>

<h1 align="center">BucketList Items</h1>

<table class="table table-hover">
  <!-- <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.title, item %></td>
        <td><%= link_to item.caption.first(60), item %></td>
        <!-- <td><%= link_to 'Edit', edit_item_path(item) %></td> -->
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add an Item', new_item_path, class: 'btn btn-success' %>
